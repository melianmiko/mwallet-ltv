<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.mhbrgn.mwallet.ltv" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>mWallet-LTV</name>
    <description>
        Pretty wallet for LTV coins
    </description>
    <author email="mhbrgn@gmail.com">
        Miha B
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="build/icon.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
