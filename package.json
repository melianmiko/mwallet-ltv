{
  "name": "mwallet-ltv",
  "displayName": "mWallet LTV",
  "version": "1.0.0",
  "description": "Pretty GUI for LeaderTVCoin bloackchain network",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist-all": "electron-builder -wl && cordova build android",
    "apk": "cordova build android"
  },
  "author": "mhbrgn <mhbrgn@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "cordova-plugin-whitelist": "^1.3.4",
    "electron": "^8.0.1",
    "electron-builder": "^22.3.2"
  },
  "dependencies": {
    "cordova-android": "^8.1.0",
    "cordova-browser": "^6.0.0",
    "electron-dl": "^3.0.0",
    "electron-window-state": "^5.0.3",
    "md5-file": "^4.0.0"
  },
  "build": {
    "appId": "ru.mhbrgn.mwallet.ltv",
    "linux": {
      "category": "Network",
      "target": [
        {
          "target": "deb",
          "arch": "x64"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "ia32"
        }
      ]
    }
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android",
      "browser"
    ]
  }
}
